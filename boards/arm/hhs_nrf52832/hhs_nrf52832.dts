/dts-v1/;
#include <nordic/nrf52832_qfaa.dtsi>
#include "hhs_nrf52832-pinctrl.dtsi"

/ {
	model = "HHS nrf52832 gas board";
	compatible = "nordic,hhs_nrf52832";

	zephyr,user {
		io-channels = <&adc 1>, <&adc 2>;
	};

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
		zephyr,bt-mon-uart = &uart0;
		zephyr,bt-c2h-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

	vbatt {
		compatible = "voltage-divider";
		status = "okay";
		io-channels = <&adc 0>;
		output-ohms = <180000>;
		full-ohms = <(1500000 + 180000)>;
		power-gpios = <&gpio0 27 GPIO_ACTIVE_HIGH>;
	};

	leds {
		compatible = "gpio-leds";
        status = "okay";

		led0: led_0 {
			gpios = <&gpio0 25 GPIO_ACTIVE_HIGH>;
			label = "mcu running status led Green";
		};
		led1: led_1 {
			gpios = <&gpio0 26 GPIO_ACTIVE_HIGH>;
			label = "low battery indicator led Yellow";
		};
	};

	pwmleds {
		compatible = "pwm-leds";
        status = "okay";
        label = "status led";

		pwm_led0: pwm_led_0 {
			pwms = <&pwm0 0 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "green led";
		};
		pwm_led1: pwm_led_1 {
			pwms = <&pwm0 1 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "yellow led";
		};
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		watchdog0 = &wdt0;
		led0 = &led0;
		led1 = &led1;
        greenled = &pwm_led0;
        yellowled = &pwm_led1;
	};
};

&pwm0 {
	status = "okay";
	pinctrl-0 = <&pwm0_default>;
	pinctrl-1 = <&pwm0_sleep>;
	pinctrl-names = "default", "sleep";
};

&nfct {
	status = "disabled";
};

&adc {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;

	/* datasheet value different, ideal 90uA +-20
	 *
	 * 1% current 5uA -> sensor vout = (Curr * Rl) * (1 + R1 / R2) =
	 * Max Output Voltage(25% oxygen) = (4.85*25*0.001*0.001*100)*(1+5100/100) = 630mV
	 * ADC Reference VDD 1/4 = 750mV
	 */
	o2_mon: channel@1 {
		reg = <1>;
		zephyr,gain = "ADC_GAIN_1";
		zephyr,reference = "ADC_REF_VDD_1_4";
		zephyr,vref-mv = <750>;
		zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
		zephyr,input-positive = <NRF_SAADC_AIN1>; /* P0.03 */
		zephyr,resolution = <14>;
		zephyr,oversampling = <8>;
	};

	gas_mon: channel@2 {
		reg = <2>;
		zephyr,gain = "ADC_GAIN_1";
		zephyr,reference = "ADC_REF_VDD_1_4";
		zephyr,vref-mv = <750>;
		zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
		zephyr,input-positive = <NRF_SAADC_AIN2>; /* P0.04 */
		zephyr,resolution = <14>;
		zephyr,oversampling = <8>;
	 };
};

&gpio0 {
	status = "okay";
	node-1 {
		gpio-hog;
		gpios = <18 GPIO_ACTIVE_HIGH>;
		output-high;
		line-name = "bme680 sensor enable pin";
	};
};

serial: &uart0 {
	status = "okay";
	compatible = "nordic,nrf-uarte";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_default>;
	pinctrl-1 = <&uart0_sleep>;
	pinctrl-names = "default", "sleep";
};

i2c: &i2c0 {
	compatible = "nordic,nrf-twim";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;

	pinctrl-0 = <&i2c0_default>;
	pinctrl-1 = <&i2c0_sleep>;
	pinctrl-names = "default", "sleep";

	bme68x:bme68x@76 {
		compatible = "bosch,bme68x";
		status = "okay";
		friendly-name = "bosch environment sensor";
		reg = <0x76>;
	};
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0xc000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0x0000C000 0x37000>;
		};
		slot1_partition: partition@43000 {
			label = "image-1";
			reg = <0x00043000 0x37000>;
		};
		storage_partition: partition@7a000 {
			label = "storage";
			reg = <0x0007a000 0x00006000>;
		};
	};
};
